<p id="notice"><%= notice %></p>

<h1>業務報告一覧</h1>

<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>日時</th>
      <th>配達個数</th>
      <th>その他追記事項</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= l post.created_at, format: :short %></td>
        <td><%= post.number %></td>
        <td><%= post.content %></td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '業務報告をする', new_post_path %>
